
<div class="tab-pane fade @(CssActive?"show active":"")" 
     id="@Id" 
     role="tabpanel" 
     aria-labelledby="home-tab">
    @Content
</div>

@code {

    [Parameter]
    public string Id { get; set; }

    [Parameter]
    public RenderFragment Content { get; set; }

    [Parameter]
    public bool CssActive { get; set; } 
}
